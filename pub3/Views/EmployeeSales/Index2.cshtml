@model PagedList.IPagedList<EdgeRealEstate.Entities.EmployeeSales>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index EmployeeSales";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<!-- include summernote css/js -->
<link href="~/Content/summernote.css" rel="stylesheet">
<script src="~/Scripts/summernote.js"></script>
<br />
<h3 style="text-align:center">مبيعات المندوب</h3>
<div>
    <table class="table" dir="rtl">
        <tr>

            <td>
                <a href="@Url.Action("Create", "EmployeeSales")" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
                @foreach (var item in Model)
                {
                    <a href="@Url.Action("Edit", "EmployeeSales", new { id = item.id })" class="btn btn-primary">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>

                    <a href="@Url.Action("Delete", "EmployeeSales", new { id = item.id })" class="btn btn-primary">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                }
            </td>

        </tr>

    </table>
</div>
<div class="form-horizontal" dir="rtl">
    @foreach (var item in Model)
    {
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.id, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("الكود", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Employee.ARName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("المندوب", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Customer.ARName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("العميل", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Project.ARName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("المشروع", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Flat.ARName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("الشقة", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Villa.ARName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("الفيلا", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Flat.Code, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("كود الشقة", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Villa.Code, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("كود الفيلا", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.PaymentSystems.ARName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("نظام السداد", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Paid, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("المبلغ", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.AdvancePayment, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("دفعة مقدمة", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.CheckBoxFor(modelItem => item.IsPrint)
            </div>
            @Html.Label("طباعة", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Note, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("ملاحظات", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(modelItem => item.Details)
            </div>
            @Html.LabelFor(modelItem => item.Details, "تفاصيل", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
    }
</div>

<div dir="rtl">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#Details').summernote();
    });
</script>