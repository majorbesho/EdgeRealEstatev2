@model EdgeRealEstate.Entities.Customer
<style>
    .form-control {
        height: 15px;
    }
</style>
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.ENName)
        </div>
        @Html.LabelFor(model => model.ENName, "الاسم الانجليزى", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.ARName)
        </div>
        @Html.LabelFor(model => model.ARName, "الاسم العربى", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.LKCountry.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الدولة", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @if (Model.Type == false)
            {
                @Html.Label("عميل", new { htmlAttributes = new { @class = "form-control" } })
            }
            else
            {
                @Html.Label("مورد", new { htmlAttributes = new { @class = "form-control" } })
            }
            @*@Html.DisplayFor(modelItem => item.Type, new { htmlAttributes = new { @class = "form-control" } })*@
        </div>
        @Html.Label("النوع", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("العنوان", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.LKCity.Aname, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("المدينة", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.tele2, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("تليفون 2", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.tele1, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("تليفون 1", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Site, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("موقع", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("فاكس", htmlAttributes: new { @class = "control-label col-md-1" })

    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Mailbox, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("صندوق البريد", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("ايميل", htmlAttributes: new { @class = "control-label col-md-1" })

    </div>
</div>
