@model EdgeRealEstate.Entities.Employee
@{
    ViewBag.Title = "Delete Employee";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<br />
<h3 style="text-align:center">الموظفين</h3>
<h4 dir="rtl">هل أنت متأكد من أنك تريد حذف هذا الموظف؟</h4>
<div class="form-horizontal" dir="rtl">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.ENName)
        </div>
        @Html.LabelFor(model => model.ENName, "الاسم الانجليزى", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.ARName)
        </div>
        @Html.LabelFor(model => model.ARName, "الاسم العربى", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.religion, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الديانة", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.LKNationality.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الجنسية", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.SocStatus, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الحالة الاجتماعية", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @if (Model.isFemale == false)
            {
                @Html.Label("ذكر", new { htmlAttributes = new { @class = "form-control" } })
            }
            else
            {
                @Html.Label("انثى", new { htmlAttributes = new { @class = "form-control" } })
            }
            @*@Html.DisplayFor(modelItem => item.Type, new { htmlAttributes = new { @class = "form-control" } })*@
        </div>
        @Html.Label("الجنس", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("تاريخ الميلاد", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Degree, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الدرجة العلمية", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.age, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("العمر", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.tele, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("تليفون", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.nearTele, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("اقرب تليفون", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("العنوان", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.nationalTele, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("التليفون المحلى", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.section, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("القطاع", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.LKBranch.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الفرع", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.ContractDur, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("مدة العقد", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.LKTitle.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("المسمى الوظيفى", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.salary, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("المرتب", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Housingallowance, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("بدل سكن", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.startDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("بداية من", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DisplayFor(model => model.POB, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("تاريخ الالتحاق", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Description)
        </div>
        @Html.LabelFor(model => model.Description, "ملاحظات", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.CheckBoxFor(model => model.isActive)
        </div>
        @Html.Label("نشط", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-primary" /> |
            @Html.ActionLink("رجوع", "Index")
        </div>
    }
</div>


