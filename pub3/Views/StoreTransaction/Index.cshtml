@model PagedList.IPagedList<EdgeRealEstate.Entities.StoreTransaction>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index StoreTransaction";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<br />
<h3 style="text-align:center">حركة مخازن</h3>
<hr />
<table class="table table-bordered" dir="rtl">
    <tr>
        <th class="text-right">
            @Html.DisplayName("الكود")
        </th>
        <th class="text-right">
            @Html.DisplayName("الصنف")
        </th>
        <th class="text-right">
            @Html.DisplayName("المخزن")
        </th>
        <th class="text-right">
            @Html.DisplayName("الكمية")
        </th>
        <th class="text-right">
            @Html.DisplayName("رقم المرجع")
        </th>
        <th class="text-right">
            @Html.DisplayName("نوع المرجع")
        </th>
        <th class="text-right">
            @Html.DisplayName("اضافة / حذف")
        </th>
        <th class="text-right">
            @Html.DisplayName("ملاحظات")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConstructionMaterial.MaterialName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LKStore.ARName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Refid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.refType)
            </td>
            <td>
                @if (item.ISadd == true)
                {
                    @Html.Label("اضافة", new { htmlAttributes = new { @class = "form-control" } })
                }
                else
                {
                    @Html.Label("حذف", new { htmlAttributes = new { @class = "form-control" } })
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notes)
            </td>
        </tr>
    }

</table>
<div style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
