@model EdgeRealEstate.Entities.StoreTransaction
@{
    ViewBag.Title = "Delete StoreTransaction";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<br />
<h3 style="text-align:center">حركة مخازن</h3>
<h4 dir="rtl">هل أنت متأكد من أنك تريد حذف هذه الحركة ؟</h4>
<div class="form-horizontal" dir="rtl">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الكود", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.ConstructionMaterial.MaterialName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الصنف", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.LKStore.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("المخزن", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Quan, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الكمية", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Refid, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("رقم المرجع", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.refType, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("نوع المرجع", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @if (Model.ISadd == true)
            {
                @Html.Label("اضافة", new { htmlAttributes = new { @class = "form-control" } })
            }
            else
            {
                @Html.Label("حذف", new { htmlAttributes = new { @class = "form-control" } })
            }
        </div>
        @Html.Label("اضافة / حذف", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.notes, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("ملاحظات", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-primary" /> |
            @Html.ActionLink("رجوع", "Index")
        </div>
    }
</div>


