            <th>اسم المشتري</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CurrntlyDate.Date</td>
                <td>@item.Flatname</td>
                <td>@item.BuildingCode</td>
                <td>@item.ProjectName</td>
                <td>@item.CostMony</td>
