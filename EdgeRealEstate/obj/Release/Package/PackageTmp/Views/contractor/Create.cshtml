@{
    ViewBag.Title = "Index contractor";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
@model EdgeRealEstate.Entities.contractor
<h3 style="text-align:center">المقاولين</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="k-rtl">
        <div class="demo-section k-content">
            @(Html.Kendo().TabStrip()
                  .Name("Customer")
                  .Items(tabstrip =>
                  {

tabstrip.Add().Text("بيانات شخصية")
.Content(model => Html.Partial("CreatePartialPersonnel", model));
         tabstrip.Add().Text("بيانات الحساب")
.Content(model => Html.Partial("CreatePartialAccount", model));
})
.SelectedIndex(0)
            )
        </div>
    </div>
    <br />
    <div class="form-group" dir="rtl">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-primary" /> |
            @Html.ActionLink("رجوع", "Index")
        </div>
    </div>
    <br />
    <div dir="rtl">
        @if (ViewBag.msgg == 1)
        {
            <div class="form-group">
                <div class="alert alert-success alert-dismissable fade-in" id="success-alert">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>تم الحفظ بنجاح</strong>
                </div>
            </div>
        }
    </div>
}
<script>
    $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
        $("#success-alert").slideUp(500);
    });
</script>
