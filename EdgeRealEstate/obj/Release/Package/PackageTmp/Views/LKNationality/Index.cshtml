@model PagedList.IPagedList<EdgeRealEstate.Entities.LKNationality>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index LKNationality";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<br />
<h3 style="text-align:center">الجنسية</h3>
<div>
    <table class="table" dir="rtl">
        <tr>

            <td>
                    <a href="@Url.Action("Create", "LKNationality")" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus"></span>
                    </a>
                    @foreach (var item in Model)
                    {
 
                        <a href="@Url.Action("Edit", "LKNationality", new { id = item.Id })" class="btn btn-primary">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="@Url.Action("Delete", "LKNationality", new { id = item.Id })" class="btn btn-primary">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    }
                </td>

        </tr>

    </table>
</div>
<div class="form-horizontal" dir="rtl">
    @foreach (var item in Model)
    {
        <div class="form-group">

            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Id, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("الكود", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.ARName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("الاسم العربى", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.ENName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("الاسم الانجليزى", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.Label("ملاحظات", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
    }
</div>

<div dir="rtl">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

