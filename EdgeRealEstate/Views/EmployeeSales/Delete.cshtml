@model EdgeRealEstate.Entities.EmployeeSales
@{
    ViewBag.Title = "Delete EmployeeSales";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<!-- include summernote css/js -->
<link href="~/Content/summernote.css" rel="stylesheet">
<script src="~/Scripts/summernote.js"></script>
<br />
<h3 style="text-align:center">مبيعات المندوب</h3>
<h4 dir="rtl">هل أنت متأكد من أنك تريد حذف هذه المبيعات؟</h4>
<div class="form-horizontal" dir="rtl">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الكود", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Employee.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("المندوب", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Customer.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("العميل", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Project.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("المشروع", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Flat.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الشقة", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Villa.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("الفيلا", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Flat.Code, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("كود الشقة", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Villa.Code, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("كود الفيلا", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.PaymentSystems.ARName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("نظام السداد", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Paid, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("المبلغ", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.AdvancePayment, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("دفعة مقدمة", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.IsPrint)
        </div>
        @Html.Label("طباعة", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.Label("ملاحظات", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Details)
        </div>
        @Html.LabelFor(model => model.Details, "تفاصيل", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-primary" /> |
            @Html.ActionLink("رجوع", "Index")
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Details').summernote();
    });
</script>

