@model EdgeRealEstate.Entities.StoreTransaction
@{
    ViewBag.Title = "Edit StoreTransaction";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<br />
<h3 style="text-align:center">حركة مخازن</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" dir="rtl">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ConstructionMaterialId, (SelectList)ViewBag.ConstructionMaterials, "اختر", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ConstructionMaterialId, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.ConstructionMaterialId, "الصنف", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.storied, (SelectList)ViewBag.LKStores, "اختر", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.storied, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.storied, "المخزن", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Quan, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Quan, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.Quan, "الكمية", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Refid, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Refid, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.Refid, "رقم المرجع", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.refType, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.refType, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.refType, "نوع المرجع", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ISadd, new List<SelectListItem> {
            new SelectListItem { Text="اضافة" ,Value ="true"},
            new SelectListItem{ Text="حذف",Value = "false"} }, "اختر", new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.ISadd, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.ISadd, "اضافة / حذف", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.notes, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.notes, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.notes, "ملاحظات", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-primary" /> |
            @Html.ActionLink("رجوع", "Index")
        </div>
    </div>
    @if (ViewBag.msgg == 1)
    {
        <div class="form-group">
            <div class="alert alert-success alert-dismissable fade-in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>تم الحفظ بنجاح</strong>
            </div>
        </div>
    }
</div>
}



