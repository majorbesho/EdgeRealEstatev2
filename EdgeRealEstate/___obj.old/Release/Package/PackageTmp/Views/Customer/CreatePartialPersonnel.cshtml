@model EdgeRealEstate.Entities.Customer
<style>
    .form-control{
        height:15px;
    }
</style>
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.ENName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ENName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.ENName, "الاسم الانجليزى", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.ARName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ARName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.ARName, "الاسم العربى", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.LKCountryId, (SelectList)ViewBag.Countries, "اختر", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LKCountryId, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.LKCountryId, "الدولة", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.Type, new List<SelectListItem> {
            new SelectListItem { Text="عميل" ,Value ="false"},
            new SelectListItem{ Text="مورد",Value = "true"} }, "اختر", new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.Type, "النوع", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.managerName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.managerName, "العنوان", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.LKCityId, (SelectList)ViewBag.Cities, "اختر", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LKCityId, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.LKCityId, "المدينة", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.tele2, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.managerName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.managerName, "تليفون 2", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.tele1, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.managerName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.managerName, "تليفون 1", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.Site, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.managerName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.managerName, "موقع", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.managerName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.managerName, "فاكس", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.Mailbox, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.managerName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.managerName, "صندوق بريد", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.managerName, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.managerName, "الايميل", htmlAttributes: new { @class = "control-label col-md-1" })
    </div>
