    $('#SalesMan').change(function () {
        $("#grid").data("kendoGrid").dataSource.read(read => read.Action("EditingCustom_Read2", "OrderJobReport").Data("getmasterdata"));
        $("#grid").css("display", "block");
    });

    $('#Project').change(function () {
        $("#grid").data("kendoGrid").dataSource.read(read => read.Action("EditingCustom_Read2", "OrderJobReport").Data("getmasterdata"));
        $("#grid").css("display", "block");
